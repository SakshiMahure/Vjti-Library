<% layout('layouts/adminBoilerplate')%>
<div style="text-align: justify;" class="card card-header align-text-center mt-2 mb-4">
    <h4>ALL BOOKS</h4>
</div>
    <% for (let book of books) { %>
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=book.images%> " alt="" class="img-fluid mt-4 mb-4 ms-4" width="230" height="160">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5><%= book.title %> </h5>
                        <p class="card-text"><%= book.description %> </p>
                        <p class="card-text">
                            <small class="text-muted">Edition: <%= book.edition %> </small> <br>
                            <small class="text-muted">Available Copies: <%= book.availableCopies %> </small>
                        </p>
                        <a class="btn btn-primary" href="/admin/books/<%=book._id%>">View <%=book.title%> </a>
                    </div>
                </div>
            </div>
        </div>
        <br>
    <% } %> 