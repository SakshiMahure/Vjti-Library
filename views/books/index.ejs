<% layout('layouts/boilerplate.ejs')%>
    <h1>All books</h1>
    <% for (let book of books) { %>
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=book.images.url%> " alt="" class="img-fluid" width="250" height="180">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5><%= book.title %> </h5>
                        <p class="card-text"><%= book.description %> </p>
                        <p class="card-text">
                            <small class="text-muted">Edition: <%= book.edition %> </small> <br>
                            <small class="text-muted">Available Copies: <%= book.availableCopies %> </small>
                        </p>
                        <a class="btn btn-primary" href="/books/<%=book._id%>">View <%=book.title%> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 